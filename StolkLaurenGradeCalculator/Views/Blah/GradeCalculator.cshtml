@{
    ViewData["Title"] = "The Dreaded Grade Calculator";
}

@model GradeCalculatorModel;

<h2>Grade Calculator</h2>
<h3>Enter the percentage for each grade category.</h3>
<form  method="post">
    <label>Assignments</label>
    <input id="assignment" asp-for="assignment" /><br />

    <label>Group Project</label>
    <input id="groupProject" asp-for="groupProject" /><br />

    <label>Quizzes</label>
    <input id="quiz" asp-for="quiz" /><br />

    <label>Exams</label>
    <input id="exam" asp-for="exam" /><br />

    <label>INTEX</label>
    <input id="intex" asp-for="intex" /><br />

    <input id="btnSend" type="submit" value="Submit Grades" />

    <div asp-validation-summary="All"></div>
</form>


<script src="~/js/GradeCalculator.js"></script>

